<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	 <item android:state_pressed="true" >
	    <shape>
	      <gradient
	          android:startColor="#D8D8D8"
	          android:centerColor="#B2B2B2"
	          android:endColor="#A5A5A5"
	          android:angle="270" />
	      <stroke
	          android:width="1dp"
	          android:color="#999999" />
	      <corners
	          android:radius="6dp" />
	      <padding
	          android:left="10dp"
	          android:top="10dp"
	          android:right="10dp"
	          android:bottom="10dp" />
	    </shape>
  	</item>
